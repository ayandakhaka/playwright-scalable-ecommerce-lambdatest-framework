{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "Node",
    "target": "ES2020",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "tests/**/*.ts",
    "utils/**/*.ts",
    "utils/allure-reporting/**/*.ts",
    "global-teardown.ts"
  ]
}
